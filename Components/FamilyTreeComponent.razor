    *@
}
<PersonModal @ref="personModal"/>
<TestatorModal @ref="testatorModal"/>
<AssetModal @ref="assetModal"/>

@code {
    private Testator editTestator { get; set; }
    private Person editHeir { get; set; }
    private Asset editAsset { get; set; }
    
